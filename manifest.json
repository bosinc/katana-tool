{
  "manifest_version": 3,
  "name": "pear-tool",
  "description": "",
  "version": "1.1.2",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "action": {
    "default_popup": "popup/index.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["src/content_script.ts"],
      "css": ["custom.css"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "src/service_worker.ts",
    "type": "module"
  },
  "permissions": ["contextMenus", "storage", "cookies", "webRequest"],
  "host_permissions": ["https://*.katana-api.1m.app/", "https://*.pear.us/"]
}